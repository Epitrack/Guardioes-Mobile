<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background_map"
    android:orientation="vertical">

    <!--<ImageView
        android:id="@+id/image_view_photo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="15dp"
        android:src="@drawable/image_avatar_3" />-->

    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/image_view_photo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="15dp"
        android:src="@drawable/image_avatar_3"
        />

    <TextView
        android:id="@+id/text_view_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="35dp"
        android:layout_marginTop="-25dp"
        android:text="@string/message_hello"
        android:textColor="@android:color/white"
        android:textSize="30dp"
        android:textStyle="bold" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="5dp">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:src="@drawable/background_home_menu" />

        <TextView
            android:id="@+id/text_view_notice"
            style="@style/TextHome"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="50dp"
            android:layout_marginTop="25dp"
            android:drawablePadding="10dp"
            android:drawableTop="@drawable/icon_notice"
            android:gravity="center"
            android:text="@string/notice" />

        <TextView
            android:id="@+id/text_view_map"
            style="@style/TextHome"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_marginRight="50dp"
            android:layout_marginTop="25dp"
            android:drawablePadding="10dp"
            android:drawableTop="@drawable/icon_map"
            android:gravity="center"
            android:text="@string/map_health_1" />

        <TextView
            android:id="@+id/text_view_tip"
            style="@style/TextHome"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_marginBottom="35dp"
            android:layout_marginLeft="50dp"
            android:drawablePadding="10dp"
            android:drawableTop="@drawable/icon_tip"
            android:gravity="center"
            android:text="@string/tip_health_1" />

        <TextView
            android:id="@+id/text_view_diary"
            style="@style/TextHome"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_alignParentRight="true"
            android:layout_marginBottom="35dp"
            android:layout_marginRight="50dp"
            android:drawablePadding="10dp"
            android:drawableTop="@drawable/icon_diary"
            android:gravity="center"
            android:text="@string/diary_health_1" />

        <TextView
            android:id="@+id/text_view_join"
            style="@style/TextHome"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="100dp"
            android:drawablePadding="10dp"
            android:drawableTop="@drawable/icon_join"
            android:gravity="center"
            android:text="@string/join" />

    </RelativeLayout>

</LinearLayout>