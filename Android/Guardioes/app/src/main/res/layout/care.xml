<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:orientation="vertical" >

        <ImageView
            android:id="@+id/image_view_logo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_margin="25dp"
            android:src="@drawable/image_logo_blue" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/care_title_01"
        android:textSize="13dp"
        android:textStyle="bold"
        android:textColor="@color/grey"
        android:layout_below="@+id/image_view_logo"
        android:layout_alignLeft="@+id/care_content_01"
        android:layout_alignStart="@+id/care_content_01" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="13dp"
        android:text="@string/care_content_01"
        android:id="@+id/care_content_01"
        android:layout_below="@id/image_view_logo"
        android:layout_margin="30dp"
        android:textColor="@color/grey"/>
    </RelativeLayout>
</ScrollView>